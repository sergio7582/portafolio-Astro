---
const { projects } = Astro.props;
import { Image, getImage } from "astro:assets";


---

<section id="mywork" class="projects-section">
  <div class="section-container">
    <h2 class="section-title">Mis proyectos</h2>
    <div class="projects-grid">
      {
        projects.map((project, index) => (
          <div class="project-card">
            <div class="project-image-container">
              <Image class="project-image" onclick={`openModal('${project.image}')`} src={project.image} alt={project.title} ></Image>
            </div>
            <h3 class="project-title">{project.title}</h3>
            <p class="project-description">{project.description}</p>
            <p class="project-description">{project.details}</p>
            <ul>
              {project.listDetails.map((details) => (
                <li>{details}</li>
              ))}
            </ul>
            <div class="project-links">
                {project.links.map(link => (
                    <a href={link.url} class="project-link">
                        <i class={`${link.icon} link-icon`}></i>&ensp;{link.text}
                    </a>
                ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Modal -->
  <div id="imageModal" class="modal" onclick="closeModal()">
    <div class="modal-content" onclick="event.stopPropagation()">
      <Image src="/" id="expandedImg" alt="Text" width={100} height={100} ></Image>
    </div>
  </div>

  <script is:inline>
    function openModal(img) {
      const modal = document.getElementById("imageModal");
      const expandedImg = document.getElementById("expandedImg");
      expandedImg.src = img;
      expandedImg.alt = "Imagen de proyecto expandida"
      modal.classList.add("open");
    }

    function closeModal() {
      document.getElementById("imageModal").classList.remove("open");
    }

    // Cerrar con ESC
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeModal();
    });

    // // Close modal when clicking outside
    window.onclick = function (event) {
      const modal = document.getElementById("projectModal");
      if (event.target === modal) {
        closeModal();
      }
    };
  </script>
</section>

<style>
  /* Estilos base */
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    padding: 1rem;
  }

  .thumbnail {
    cursor: pointer;
    transition: transform 0.3s ease;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .thumbnail:hover {
    transform: scale(1.05);
  }

  .thumbnail img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    vertical-align: middle;
  }

  /* Modal */
  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(75, 75, 75, 0.9);
    justify-content: center;
    align-items: center;
    z-index: 1000;
    animation: fadeIn 0.3s ease;
  }

  .modal.open {
    display: flex;
  }

  .modal-content {
    max-width: 90%;
    max-height: 90vh;
    position: relative;
    animation: zoomIn 0.3s ease;
  }

  .modal img {
    width: 100%;

    height: auto;
    max-height: 80vh;
    object-fit: contain;
    border-radius: 8px;
  }

  .close-btn {
    position: absolute;
    top: -40px;
    right: -10px;
    color: white;
    font-size: 40px;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .close-btn:hover {
    color: #ff4757;
  }

  /* Animaciones */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes zoomIn {
    from {
      transform: scale(0.8);
    }
    to {
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .modal-content {
      max-width: 95%;
    }

    .close-btn {
      top: -30px;
      right: 0;
      font-size: 30px;
    }
  }
</style>
